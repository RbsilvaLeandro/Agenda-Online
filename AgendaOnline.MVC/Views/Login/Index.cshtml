@model AgendaOnline.MVC.ViewModels.LogViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />   
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
    <title>Agenda Online</title>

</head>

<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Login"))
            {
            <div class="row">
                <div class="col-md-4 col-md-offset-7">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-lock"></span> Agenda Online
                        </div>
                        <div class="panel-body">
                            <form role="form" method="post">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <label for="txtUsuario" control-label">
                                            Usuário
                                        </label>
                                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuário" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <label for="txtSenha" control-label">
                                            Senha
                                        </label>
                                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", type = "password", @placeholder = "Senha" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12 text-right" style="margin-top:10px;">
                                        <input type="submit" value="Acessar" id="BtnLogin" class="btn btnLogin" />
                                    </div><br />
                                    <div class="col-sm-12">
                                        @if (Html.ViewData.ModelState.Count > 0)
                                        {
                                            <div class="alert alert-danger">
                                                @foreach (var modelError in Html.ViewData.ModelState.SelectMany(keyValuePair => keyValuePair.Value.Errors))
                                                {
                                                    <p>@modelError.ErrorMessage</p>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="panel-footer">
                            <a href="#" class="CorLink">Esqueci minha senha</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</body>

</html>
